<?xml version="1.0"?>
<block>
  <name>Clipper</name>
  <key>phychic_clipper</key>
  <category>[phychic]</category>
  <import>import phychic</import>
  <make>phychic.Clipper(lower=$lower, upper=$upper)</make>

  <param>
    <name>Lower limit</name>
    <key>lower</key>
    <value>-1.0</value>
    <type>float</type>
  </param>

  <param>
    <name>Upper limit</name>
    <key>upper</key>
    <value>1.0</value>
    <type>float</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <source>
    <name>signal</name>
    <type>complex</type>
  </source>

</block>

<?xml version="1.0"?>
<block>
  <name>Clever IShort to Complex</name>
  <key>phychic_clever_ishort2complex</key>
  <category>[phychic]</category>
  <import>from phychic.clever_ishort2complex import clever_ishort2complex, C2IS_SCALE_FACTOR</import>
  <make>clever_ishort2complex($scale_factor)</make>

  <param>
    <name>Scale factor</name>
    <key>scale_factor</key>
    <value>1.0 / C2IS_SCALE_FACTOR</value>
    <type>float</type>
  </param>

  <sink>
    <name>in</name>
    <type>short</type>
  </sink>

  <source>
    <name>signal</name>
    <type>complex</type>
  </source>

</block>

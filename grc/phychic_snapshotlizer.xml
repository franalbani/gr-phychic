<?xml version="1.0"?>
<block>
  <name>Snapshotlizer</name>
  <key>phychic_snapshotlizer</key>
  <category>[phychic]</category>
  <import>import phychic</import>
  <make>phychic.snapshotlizer($block_size, $one_in, item_size=$item_type.size)</make>

  <param>
    <name>Block size</name>
    <key>block_size</key>
    <value>2048</value>
    <type>int</type>
  </param>

  <param>
    <name>One in</name>
    <key>one_in</key>
    <value>48</value>
    <type>int</type>
  </param>

  <param>
    <name>Item type</name>
    <key>item_type</key>
    <type>enum</type>
    <option>
        <name>Complex</name>
        <key>complex</key>
        <opt>size:gr.sizeof_gr_complex</opt>
    </option>
    <option>
        <name>IShort</name>
        <key>short</key>
        <opt>size:gr.sizeof_short</opt>
    </option>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>$output_type</type>
  </source>
</block>
